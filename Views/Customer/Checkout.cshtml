@model termProject.Models.productOrderViewModel

@{
    ViewBag.Title = "Checkout";
}

<!---->
<div class="top-nav">
    <span class="menu">MENU </span>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("NEW PRODUCTS", "Product", "Product") </li>
        <li>@Html.ActionLink("SHIPPING", "shipping", "Product") </li>
        <li>@Html.ActionLink("About Us", "About", "Home")</li>
    </ul>
    <!--script-->
    <script>
        $("span.menu").click(function () {
            $(".top-nav ul").slideToggle(500, function () {
            });
        });
    </script>
</div>
<!---->
<div class="check-out">
    <h2>Checkout</h2>
    <table>
        <tr>
            <th>ITEM</th>
            <th>QTY</th>
            <th>PRICES</th>
            <th>DELIVERY Status</th>
            <th></th>
        </tr>
        
        @for(int i=0; i< Model.pr.Count;i++)
        { 
        <tr>
            <td class="ring-in">
                <a href="#" class="at-in"><img src="@Url.Content(Model.pr[i].image)" class="img-responsive" alt=""></a>
                <div class="sed">
                    <h5>@Model.pr[i].Name</h5>
                    <p>@Model.pr[i].Description</p>
                </div>
                <div class="clearfix"> </div>
            </td>
            <td class="check"><input type="text" value=@Model.or[i].Quantity onfocus="this.value='';" onblur="if (this.value == '') {this.value ='';}"></td>

            <td>$@Model.pr[i].Price</td>

                <td>@Model.or[i].status</td>
            @if(string.Compare(@Model.or[i].status,"pending",true)==0)
            { 
                 <td><a href="/Order/Cancel/@Model.or[i].Id" class="proceed">Cancel Order</a></td>
            }
           @if (!(string.Compare(@Model.or[i].status, "pending", true) == 0))
            {
                <td></td>
            }
            </tr>
        }
        
       
    </table>
    
    <div class="clearfix"> </div>
</div>

