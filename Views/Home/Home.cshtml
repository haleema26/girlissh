@model List<termProject.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="top-nav">
    <span class="menu">MENU</span>
    <ul>
        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("NEW PRODUCTS", "Product", "Product") </li>
        <li>@Html.ActionLink("SHIPPING", "shipping", "Product") </li>
        <li>@Html.ActionLink("About Us", "About", "Home")</li>
        
    </ul>
    <!--script-->
    <script>
        $("span.menu").click(function () {
            $(".top-nav ul").slideToggle(500, function () {
            });
        });
    </script>
</div>

        <div class="content">
            <div class="col-md-8 content-right">
                <div class="banner">
                    <h1>Girlisssh</h1>
                </div>
                <div class="content-right-in">
                    <h2 id="blink">New <span>Arrivals</span></h2>
                    
                        @foreach (var p in Model)
                        { 
                            <div class="col-md-3 ring">
                                <img src="@Url.Content(p.image)" alt=" " >
                            <div class="right-on">
                            <p>PRICE <span>@p.Price</span></p>
                            <h6> @Html.ActionLink("View", "detail", "Product", new { prName= @p.Name},null)</h6>
                        </div>
                        </div>
                        }
                  
                    <div class="clearfix"> </div>
                </div>
                <div class="content-right-bottom">
                    <h3>Buy Jewellery online at <span>Girlisssh.com</span></h3>
                    <p>Girlisssh offers a vast fashion jewelry collection online in Pakistan that includes bangles, earrings, rings, bracelets, necklace, Jewellery sets and much more. Buy best quality fashion jewelry online at low price with free home delivery in Pakistan, 60+ cities of Pakistan. At Girlisssh we offer free home delivery and cash on delivery (COD) service. </p>
                </div>
                
            </div>
            <div class="col-md-4 content-left">
                <div class="search">
                    <h5>Search Our Products</h5>
                    <form>
                        <input type="text" value="enter your search terms">
                        <input type="submit" value="">
                    </form>
                   
                </div>
                
                </div>
             

            <div class="clearfix"> </div>
        </div>
        
 